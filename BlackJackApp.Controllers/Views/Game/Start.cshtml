    <form action="@Url.Action("CurrentGame", "Game")" method="post" id="form">
        <ul id="fieldList">
            <li style="text-align:center">
                <h4><label for="name">Start Game </label></h4>
                <input type="text" id="name" name="PlayerName" class="k-textbox" placeholder="Enter your name..." required validationMessage="Enter {0}" style="width: 220px;" />
