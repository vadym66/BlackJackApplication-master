            <li style="text-align:center">
                    <input id="dropElementId" name="BotQuantity" />
            </li>

            <li style="text-align:center">
                <button id="startbutton" type="button">Press to start</button>
            </li>
        </ul>
    </form>

    <style>
        #fieldList li {
            list-style: none;
            padding-bottom: .7em;
            text-align: left;
        }

        #fieldlist label {
            display: block;
            padding-bottom: .3em;
            font-weight: bold;
            text-transform: uppercase;
